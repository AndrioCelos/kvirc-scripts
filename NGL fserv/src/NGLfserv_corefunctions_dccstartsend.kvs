alias(NGLfserv::corefunctions::dccstartsend)
{
	%irccontext=$0
		%nick=$1
		%completepath=$2
	
		if(%DccReverse)
			dcc.rsend -z -r=%irccontext %nick %completepath
		else
			dcc.send -r=%irccontext %nick %completepath
	
		if($objects.exists(%NGLmonitor)) %NGLmonitor->$showSends()
		return $true
}

