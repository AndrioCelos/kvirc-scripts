alias(NGLfserv::corefunctions::calc)
{
	# $0 = bytes

	if($0==0) {
		return "0 b"
	}

	if($0<1024) {
		return "1 kb"
	}

	%a=$($0/1024)

	if(%a<1024) {
		return "%a kb"
	}

	%b=$(%a/1024)

	if(%b<1024) {
		return "%b mb"
	}

	%c=$(%b/1024)

	if(%c<1024) {
		return "%c gb"
	}

	%d=$(%c/1024)

	if(%d<1024) {
		return "%d tb"
	}
}

